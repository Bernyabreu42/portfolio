---
import CheckList from "./icons/Checklist.astro";
const { title, description } = Astro.props;
---

<li class="mb-10 ml-4">
  <div
    class="absolute w-6 h-6 rounded-full -left-3 flex items-center justify-center text-white"
  >
    <CheckList class="size-15" />
  </div>
  <h3
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    {title}
  </h3>
  <p class="text-gray-500 text-sm">
    {description}
  </p>
  <!-- <span class="text-blue-500 text-sm font-semibold">2007</span> -->
</li>
